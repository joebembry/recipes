	<string>edu.monmouth.im.autopkg.download.HOBOware</string>
	<key>Process</key>
	<array>
		<dict>
            <key>Processor</key>
            <string>StopProcessingIf</string>
            <key>Arguments</key>
            <dict>
                <key>predicate</key>
                <string>download_changed == True</string>
            </dict>
